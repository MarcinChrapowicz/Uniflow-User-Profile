<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uniflow.marcinchrapowicz.userprofile">

    <application
        android:name="uniflow.marcinchrapowicz.UserProfileApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.UserProfileActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="uniflow.marcinchrapowicz.email.EmailActivity"
            android:screenOrientation="portrait"
            android:label="Email Activity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="uniflow.marcinchrapowicz.mobilenumber.MobileNumberActivity"
            android:screenOrientation="portrait"
            android:label="Mobile Number Activity"
            android:theme="@style/AppTheme"/>
    </application>
</manifest>